{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "design",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "ra-design",
      "kebab-case"
    ],
    "no-shadowed-variable": [
      false
    ],
    "no-inferrable-types": [
      false
    ],
    "max-line-length": [
      true,
      180
    ],
    "component-class-suffix": false
  }
}
